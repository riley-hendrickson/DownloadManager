<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="window-root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.rileyhe1.concurrency.GUI.MainController">
   <center>
      <TableView fixedCellSize="34.0" prefHeight="295.0" prefWidth="1121.0" stylesheets="@style.css" BorderPane.alignment="CENTER">
      <placeholder>
      <VBox alignment="CENTER" spacing="10">
         <Label styleClass="empty-state-title" text="No Downloads Yet">
            <font>
               <Font name="Segoe UI Semibold" size="18.0" />
            </font>
         </Label>
         <Label styleClass="empty-state-subtitle" text="Click 'Add New Download' to get started">
            <font>
               <Font size="13.0" />
            </font>
         </Label>
      </VBox>
   </placeholder>
        <columns>
          <TableColumn prefWidth="75.0" text="Destination" />
          <TableColumn prefWidth="75.0" text="URL" />
            <TableColumn prefWidth="75.0" text="Status" />
            <TableColumn prefWidth="75.0" text="Progress" />
            <TableColumn prefWidth="75.0" text="Actions" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #EEE; -fx-padding: 6 10 6 10;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Status: Idle" textFill="#555555">
               <font>
                  <Font size="13.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </bottom>
   <top>
      <VBox prefHeight="121.0" prefWidth="1125.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" onMouseDragged="#handleTitleBarDragged" onMousePressed="#handleTitleBarPressed" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #20232A;">
               <padding>
                  <Insets bottom="8.0" left="12.0" right="12.0" />
               </padding>
               <children>
                  <Label lineSpacing="10.0" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Riley's Concurrent Download Manager" HBox.hgrow="ALWAYS" />
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#handleMinimize" styleClass="title-button" text="—" />
                  <Button fx:id="maximizeButton" mnemonicParsing="false" onAction="#handleMaximize" styleClass="title-button" text="⬜" />
                  <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" styleClass="button-close" text="✖" />
               </children>
            </HBox>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button mnemonicParsing="false" styleClass="toolbar-button-primary" text="➕ Add New Download" />
                  <Button mnemonicParsing="false" styleClass="toolbar-button-success" text="▶ Start All" />
                  <Button mnemonicParsing="false" styleClass="toolbar-button-info" text="⏸ Pause All" />
                  <Button mnemonicParsing="false" styleClass="toolbar-button-cancel" text="Cancel All" />
                  <Separator prefWidth="200.0">
                     <padding>
                        <Insets left="600.0" />
                     </padding>
                  </Separator>
                  <Button alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="toolbar-button-primary" text="Settings" textAlignment="CENTER" />
              </items>
            </ToolBar>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="searchBox" promptText="Search Downloads..." HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </TextField>
                  <ComboBox prefWidth="150.0" promptText="Status: All">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </ComboBox>
                  <ComboBox prefHeight="25.0" prefWidth="196.0" promptText="Sort: Date / Name / Progress">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </ComboBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
